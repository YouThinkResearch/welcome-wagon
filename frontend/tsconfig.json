{
  "compilerOptions": {
    "pretty": true,
    "target": "es2017",
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": false,
    "allowJs": true,
    "jsx": "preserve",
    "lib": [
      "dom",
      "es6",
      "esnext"
    ],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "./build",
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "isolatedModules": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "sample/**/*.ts",
    "e2e"
  ]
}
